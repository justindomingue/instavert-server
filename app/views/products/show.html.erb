<ul data-role="listview" class="ui-listview">
  <h1 class="centering">Ce produit se recycle ici :</h1>
  <% @product.places.each do |place| %>
  <li class="ui-li ui-li-static ui-btn-ip-c ui-li-has-thumb">
    <img class="ui-li-thumb" src="/assets/thumbs/<%= place.thumb %>" />
    <h3 class="ui-li-heading"><%= place.name %></h3>
    <p class="ui-li-desc"><%= place.description %>.</p>
  </li>
  <% end %>
</ul>
