.border-form-div
  %h2 Inscription
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { }) do |f|
    = devise_error_messages!
    
    .form-group
      %span.help-block Pour inscrire votre établissement scolaire, entrez les informations de contact de la personne responsable. Nous vous contacterons sous peu pour mettre sur pied votre compte et votre tableau de bord.
      = f.email_field :email, :placeholder => 'Adresse couriel', class:'form-control'
      = f.password_field :password, :placeholder => 'Mot de passe', class:'form-control'
      = f.password_field :password_confirmation, :placeholder => 'Confirmation de mot de passe', class:'form-control'
      %hr
      = f.text_field :contact_name, :placeholder => 'Nom du responsable', class:'form-control'
      = f.text_field :phone_number, :placeholder => 'Numéro de téléphone du responsable', class:'form-control'
      = f.text_field :school_name, :placeholder => 'Établissement scolaire', class:'form-control'
    %br/
    = f.submit "Enregistrer",:class=>'btn btn-success'
  = render "users/shared/links"