.border-form-div
  %h2 Modification du profil
  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
    = devise_error_messages!

    .form-group
      %span.help-block
        Modification des identifiants de connexion ainsi que des informations de contact de la personne ressource.
      
      %hr
      %h4 Identifiants
      %br
      = f.email_field :email, :placeholder => 'Adresse couriel', class:'form-control', autofocus:true
      
      %span.help-block Par mesure de sécurité, entrez votre mot de passe actuel
      = f.password_field :current_password , :placeholder => 'Mot de passe actuel', class:'form-control'
      
      %span.help-block Laisser les champs vides pour conserver le mot de passe actuel
      = f.password_field :password, :placeholder => 'Nouveau mot de passe', class:'form-control'
      = f.password_field :password_confirmation, :placeholder => 'Confirmation de mot de passe', class:'form-control'
      %hr
      %h4 Information de contact
      %br
      = f.text_field :contact_name, :placeholder => 'Nom du responsable', class:'form-control'
      = f.text_field :phone_number, :placeholder => 'Numéro de téléphone du responsable', class:'form-control'
      = f.text_field :school_name, :placeholder => 'Établissement scolaire', class:'form-control'
      
    %br
    = f.submit "Enregistrer",:class=>'btn btn-success'

= link_to "Retour", :back
